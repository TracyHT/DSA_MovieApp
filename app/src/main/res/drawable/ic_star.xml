    <item android:id="@android:id/secondaryProgress">
        <bitmap android:src="@drawable/star"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp"
            android:bottom="5dp" />
    </item>
    <item android:id="@android:id/progress">
        <bitmap android:src="@drawable/star"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp"
            android:bottom="5dp" />
    </item>
</layer-list>
